<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.Controller" >
    <children>
        <VBox layoutX="273.0" layoutY="92.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <MenuBar VBox.vgrow="ALWAYS">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onClickChooseDir" text="Choose directory..."/>
                                <MenuItem mnemonicParsing="false" onAction="#onClickChooseFile" text ="Choose files..."/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" text="Exit" onAction="#onClickExit"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Fonts">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Choose font" onAction="#onClickChoseFontDialog"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Encoding">
                            <fx:define>
                                <ToggleGroup fx:id="toggleGroupMenuCheckEncode"/>
                            </fx:define>
                            <items>
                                <RadioMenuItem text="UTF-8" selected="true" toggleGroup="$toggleGroupMenuCheckEncode"/>
                                <RadioMenuItem text="UNICODE (UTF-16)" toggleGroup="$toggleGroupMenuCheckEncode"/>

                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onClickAbout" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" style="-fx-background-color: silver" >
                    <top>
                        <HBox fx:id="hBoxForRBut" prefHeight="47.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                            <fx:define>
                                <ToggleGroup fx:id="toggleGroup"/>
                            </fx:define>
                        </HBox>
                    </top>
                    <center>
                        <TableView fx:id="tableView" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"
                        >
                            <columns>
                                <TableColumn prefWidth="75.0" text="Key"/>
                                <TableColumn prefWidth="75.0" text="Exercise"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </center>
                </BorderPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
